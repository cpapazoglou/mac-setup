# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

if [[ -s "${ZDOTDIR:-$HOME}/.zsh-secrets" ]]; then
  source "${ZDOTDIR:-$HOME}/.zsh-secrets"
fi

source /usr/local/bin/virtualenvwrapper.sh

# Exported variables
export HISTCONTROL=$HISTCONTROL:ignorespace
export JAVA_HOME=$(/usr/libexec/java_home)
export GOPATH="$HOME/.go"
export PATH="$PATH:$HOME/.go/bin"
export PATH=$PATH:/usr/local/opt/go/libexec/bin
export PATH=$PATH:$JAVA_HOME/bin
export PATH="/usr/local/opt/gpg-agent/bin:$PATH"
export PATH="/usr/local/opt/libpq/bin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

# Profile Editing aliases
alias epro="vi ~/.zshrc && . ~/.zshrc"
alias rpro="source ~/.zshrc"

alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias pull="git pull -r"
alias push="git push"
alias reset="git reset --hard HEAD"

alias l="ls -l"
alias g=./gradlew
alias rmd="rm -rf"

alias vi="vim"

alias json="cat $1 | jq ."
alias dc="docker-compose"
alias bef="rm -f before after && defaults read > before"
alias aft="defaults read > after && code --diff before after"
alias brewfile="rm -f ~/projects/personal/mac-setup/brew/Brewfile && brew bundle dump --file=~/projects/personal/mac-setup/brew/Brewfile"
alias signpersonal="git config user.signingkey 88A4C761 && git config user.email \"karun@japhet.in\""
alias signwork="git config user.signingkey 704CA986 && git config user.email \"karunj@sahajsoft.com\""

# Auto jump
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh

# The Fuck: Command fix alias
eval $(thefuck --alias --enable-experimental-instant-mode)

# Autogenerated

# added by travis gem
[ -f /Users/karun/.travis/travis.sh ] && source /Users/karun/.travis/travis.sh
