#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#   Karun Japhet <karun@japhet.in>
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

if [[ -s "${ZDOTDIR:-$HOME}/.zsh-secrets" ]]; then
  source "${ZDOTDIR:-$HOME}/.zsh-secrets"
fi

if [[ -s "/usr/local/bin/virtualenvwrapper.sh" ]]; then
  source "/usr/local/bin/virtualenvwrapper.sh"
fi

if [[ -s "$HOME/.zsh-secrets" ]]; then
  source "$HOME/.zsh-secrets"
fi

# Exported variables
export HISTCONTROL=$HISTCONTROL:ignorespace
export JAVA_HOME=$(/usr/libexec/java_home)
export GOPATH="$HOME/.go"
export PATH="$PATH:$HOME/.go/bin"
export PATH=$PATH:/usr/local/opt/go/libexec/bin
export PATH=$PATH:$JAVA_HOME/bin
export PATH="/usr/local/opt/gpg-agent/bin:$PATH"
export PATH="/usr/local/opt/libpq/bin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

# Profile Editing aliases
alias epro="vi ~/.zshrc && . ~/.zshrc"
alias rpro="source ~/.zshrc"

alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias pull="git pull -r"
alias push="git push"
alias reset="git reset --hard HEAD"

alias l="ls -l"
alias g=./gradlew
alias rmd="rm -rf"

alias vi="vim"

alias json="cat $1 | jq ."
alias dc="docker-compose"
alias bef="rm -f before after && defaults read > before"
alias aft="defaults read > after && code --diff before after"
alias brewfile="rm -f ~/projects/personal/mac-setup/brew/Brewfile && brew bundle dump --file=~/projects/personal/mac-setup/brew/Brewfile"
alias signpersonal="git config user.signingkey $GPG_KEY_PERSONAL && git config user.email \"$GPG_MAIL_PERSONAL\""
alias signwork="git config user.signingkey $GPG_KEY_WORK && git config user.email \"$GPG_MAIL_WORK\""

alias rentv="filebot -rename $DIR_INPUT_TV --output $DIR_OUTPUT_TV --db TheTvDB --non-strict --format \"{n}/Season {s.pad(2)/{n} - {s00e00} - {t}\""
alias subtv="filebot -script fn:suball $DIR_OUTPUT_TV --non-strict --def maxAgeDays=7"
alias tv='rentv && subtv'
alias renmov="filebot -rename $DIR_INPUT_MOVIES --output $DIR_OUTPUT_MOVIES --db TheMovieDB --non-strict --format \"{y} = {n}/{n} ({y})\""
alias submov="filebot -script fn:suball $DIR_OUTPUT_MOVIES --non-strict --def maxAgeDays=7"
alias mov='renmov && submov'

# Auto jump
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh

# The Fuck: Command fix alias
eval $(thefuck --alias --enable-experimental-instant-mode)

# Autogenerated

# added by travis gem
[ -f /Users/karun/.travis/travis.sh ] && source /Users/karun/.travis/travis.sh
